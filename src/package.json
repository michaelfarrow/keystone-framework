{
  "name": "keystone-framework",
  "private": true,
  "version": "1.0.0",
  "description": "Docker based Keystone framework",
  "author": "Mike Farrow <contact@mikefarrow.co.uk>",
  "devDependencies": {
    "forever": "0.15.1",
    "browser-sync": "2.11.1",
    "webpack": "1.12.12",
    "chokidar": "1.4.2",
    "webpack-dev-server": "1.14.1",
    "extract-text-webpack-plugin": "1.0.1",
    "webpack-manifest-plugin": "1.0.0",
    "raw-loader": "0.5.1",
    "file-loader": "0.8.5",
    "url-loader": "0.5.7",
    "style-loader": "0.13.0",
    "css-loader": "0.23.1",
    "eslint": "1.10.3",
    "eslint-loader": "1.2.1",
    "postcss-loader": "0.8.0",
    "postcss-import": "8.0.2",
    "postcss-assets": "4.0.0",
    "postcss-color-mix": "1.1.0",
    "postcss-color-function": "2.0.0",
    "postcss-responsive-images": "1.0.1",
    "postcss-media-minmax": "2.1.1",
    "postcss-cachebuster": "0.1.2",
    "lost": "6.7.1",
    "precss": "1.4.0",
    "autoprefixer": "6.3.1",
    "postcss-responsive-type": "0.3.2",
    "postcss-font-magician": "1.4.0",
    "normalize.css": "3.0.3",
    "jshint": "2.9.1"
  },
  "dependencies": {
    "keystone": "0.3.19",
    "connect-mongo": "1.1.0",
    "lodash": "4.2.0",
    "async": "1.5.2",
    "local-url-cache": "1.2.1",
    "keystone-options": "0.3.0",
    "keystone-pages": "1.0.0"
  },
  "scripts": {
    "lint"   : "node_modules/.bin/eslint index.js **/*.js",
    "dev"    : "node_modules/.bin/webpack-dev-server --colors --content-base public/ --host 0.0.0.0 --port 80 --hot --inline",
    "watch"  : "env $([ ! -f ../ENVIRONMENT_LOCAL ] || (cat ../ENVIRONMENT_LOCAL | xargs)) node_modules/.bin/forever --minUptime 1000 --spinSleepTime 1000 index.js",
    "test"   : "npm run lint",
    "webpack": "node_modules/.bin/webpack"
  }
}
