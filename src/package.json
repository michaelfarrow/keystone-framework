{
  "name": "keystone-framework",
  "private": true,
  "version": "1.0.0",
  "description": "Docker based Keystone framework",
  "author": "Mike Farrow <contact@mikefarrow.co.uk>",
  "devDependencies": {
    "standard": "11.0.1",
    "forever": "0.15.3",
    "chokidar": "2.0.3",
    "browser-sync": "2.23.6",
    "webpack": "4.4.1",
    "webpack-cli": "2.0.13",
    "webpack-dev-server": "3.1.1",
    "extract-text-webpack-plugin": "next",
    "webpack-manifest-plugin": "2.0.0-rc.2",
    "raw-loader": "0.5.1",
    "file-loader": "1.1.11",
    "url-loader": "1.0.1",
    "style-loader": "0.20.3",
    "css-loader": "0.28.11",
    "postcss-loader": "2.1.3",
    "postcss-import": "11.1.0",
    "postcss-assets": "5.0.0",
    "postcss-color-mix": "1.1.0",
    "postcss-color-function": "4.0.1",
    "postcss-responsive-images": "1.0.3",
    "postcss-media-minmax": "3.0.0",
    "postcss-cachebuster": "0.1.5",
    "lost": "8.2.1",
    "precss": "3.1.2",
    "autoprefixer": "8.2.0",
    "postcss-responsive-type": "1.0.0",
    "postcss-font-magician": "2.1.0",
    "normalize.css": "8.0.0"
  },
  "dependencies": {
    "app-module-path": "2.2.0",
    "keystone": "4.0.0-beta.8",
    "connect-mongo": "2.0.1",
    "debug": "3.1.0",
    "pug": "2.0.3",
    "lodash": "4.17.5",
    "async": "2.6.0",
    "local-url-cache": "1.3.0",
    "keystone-options": "0.8.0",
    "keystone-pages": "1.8.0",
    "docker-secrets-to-env": "1.0.0"
  },
  "scripts": {
    "lint": "node_modules/.bin/standard",
    "dev": "node_modules/.bin/forever --minUptime 1000 --spinSleepTime 1000 node_modules/.bin/webpack-dev-server --colors --content-base public/ --host 0.0.0.0 --port 80 --hot --inline",
    "watch": "env $([ ! -f ../ENVIRONMENT_LOCAL ] || (cat ../ENVIRONMENT_LOCAL | xargs)) node_modules/.bin/forever --minUptime 1000 --spinSleepTime 1000 index.js",
    "test": "npm run lint",
    "webpack": "node_modules/.bin/webpack",
    "production": "NODE_ENV=production DEBUG=req,app,app:* DEBUG_COLORS=1 node index"
  }
}
